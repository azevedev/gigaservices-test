<div class="container">
<%= form_with(model: user) do |form| %>

  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title input -->
  <div class="form-outline mb-4">
    <%= form.label :title, class:"form-label" %>
    <%= form.text_field :title, id:"user_title", class:"form-control" %>
  </div>
  
  <!-- Name input -->
  <div class="form-outline mb-4">
    <%= form.label :name, class:"form-label" %>
    <%= form.text_field :name, id:"user_name", class:"form-control" %>
  </div>

  <!-- Gender input -->
  <div class="form-outline mb-4">
    <%= form.label :gender, class:"form-label" %>
    <%= form.text_field :gender, id:"user_gender", class:"form-control" %>
  </div>
  
  <!-- E-mail input -->
  <div class="form-outline mb-4">
    <%= form.label :email, class:"form-label" %>
    <%= form.text_field :email, id:"user_email", class:"form-control" %>
  </div>

  <!-- Age input -->
  <div class="form-outline mb-4">
    <%= form.label :age, class:"form-label" %>
    <%= form.number_field :age, id:"user_age", class:"form-control" %>
  </div>

  <!-- Phone input -->
  <div class="form-outline mb-4">
    <%= form.label :phone, class:"form-label" %>
    <%= form.text_field :phone, id:"user_phone", class:"form-control" %>
  </div>

  <!-- Avatar input -->
  <div class="form-outline mb-4">
    <%= form.label :avatar, class:"form-label" %>
    <%= form.file_field :avatar, id:"user_avatar", class:"form-control" %>
  </div>

  <!-- Submit button -->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


</div>


<style>
  body{
    background: #212121;
    color: white;
  }

</style>