<section class="vh-100" style="background-color: #212121;">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="card" style="width: 18rem;">
      <%= image_tag @user.avatar, class:"img-fluid" %>
      <div class="card-body">
        <h5 class="card-title"><i> <%= @user.title %>  <%= @user.name %> </i></h5>
        <p class="mb-2 pb-1" style="color: #2b2a2a;"><%= @user.gender %>, <%= @user.age %> years</p>
        <p class="card-text"></p>
        <div>
          <p class="small  mb-1">E-mail: <%= @user.email %></p>
          <p class="b-0">Tel: <%= @user.phone %></p>
        </div>
        <div class="d-flex pt-1">
          <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-outline-primary me-1 flex-grow-1 mr-md-3" %>
          <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger flex-grow-1' %>
        </div>
      </div>
      <%= link_to 'Back', users_path, class:"btn btn-primary" %>
    </div>

  </div>


</section>


<style>
body, section{
  overflow: hidden;
}

img{
 border-radius: 10px;
}

.card-body{
  padding: 0.6rem;
}

</style>